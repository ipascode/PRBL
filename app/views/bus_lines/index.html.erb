<p id="notice"><%= notice %></p>

<h1>Bus Lines</h1>

<table>
  <thead>
    <tr>
      <th>Linename</th>
      <th>Distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_lines.each do |bus_line| %>
      <tr>
        <td><%= bus_line.linename %></td>
        <td><%= bus_line.distance %></td>
        <td><%= link_to 'Show', bus_line %></td>
        <td><%= link_to 'Edit', edit_bus_line_path(bus_line) %></td>
        <td><%= link_to 'Destroy', bus_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus Line', new_bus_line_path %>
<%= link_to 'Back', buses_path %>
