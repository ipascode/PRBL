<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6 col-xs-3">
    <h1>Bus Lines</h1>
  </div>

  <div class="col-md-6 col-xs-9">
    <div class="btn-group pull-right" role="group" aria-label="..." style="padding-top:18px;">
      <%= link_to 'Back', buses_path, :class => "btn btn-default" %>
      <%= link_to 'New Bus Line', new_bus_line_path, :class => "btn btn-default" %>
      <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapseCSV" aria-expanded="false" aria-controls="collapseExample">
        Import
      </button>
      <%= link_to "Export", bus_lines_path(format: "csv"), :class => "btn btn-default" %> 
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-3 pull-right">
  <div class="collapse" id="collapseCSV">
    <div class="well">
      <%= form_tag import_bus_lines_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import CSV", :class => "btn btn-default" %>
      <% end %>
    </div>
  </div>
  </div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Line</th>
      <th>Distance</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @bus_lines.each do |bus_line| %>
      <tr>
        <td><%= bus_line.linename %></td>
        <td><%=number_with_precision( bus_line.distance , :precision => 0)%></td>
        <td><%= link_to 'Line Info', bus_line, label: "Line Info", :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_bus_line_path(bus_line), :class => "btn btn-default" %></td>
        <td><%= link_to 'Delete', bus_line, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>




