<%= simple_form_for(@part) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :partname %>
    <%= f.input :part_number %>
    <%= f.association :bus_model %>
    <%= f.input :index_number %>
    <%= f.input :price %>
    <%= f.input :lifespan %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
