<p id="notice"><%= notice %></p>

<h1>Buses</h1>

<div class="btn-group" role="group" aria-label="...">
  <%= link_to 'Add Bus', new_bus_path, :class => "btn btn-default" %>
  <%= link_to 'Add Bus Model', new_bus_model_path, :class => "btn btn-default"  %>
  <%= link_to 'Add Bus Line', new_bus_line_path, :class => "btn btn-default"  %>
  <%= link_to 'Bus Lines', bus_lines_path, :class => "btn btn-default"  %>
  <%= link_to 'Models', bus_models_path, :class => "btn btn-default"  %>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Bus Number</th>
      <th>Bus Model</th>
      <th>Plate No.</th>
      <th>Date Purchased</th>
      <th>Odometer</th>
      <th>Bus line</th>
      <th>Cost/KM</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @buses.each do |bus| %>
      <tr>
        <td><%= image_tag bus.avatar.url(:thumb) %></td>
        <td><%= bus.bus_no %></td>
        <td><%= bus.BusModel.brand %></td>
        <td><%= bus.plate_no %></td>
        <td><%= bus.date_purchased %></td>
        <td><%= bus.odometer %></td>
        <td><%= bus.BusLine.linename %></td>
        <td><%= bus.cpk %></td>
        <td><%= link_to 'View', bus, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_bus_path(bus), :class => "btn btn-warning"  %></td>
        <td><%= link_to 'Delete', bus, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


