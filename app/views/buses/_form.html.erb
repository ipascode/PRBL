  <%= f.input :plate_no %>
  <%= f.input :date_purchased %>
  <%= f.input :odometer %>

  <div class="field">
    <%= f.label :BusLine_id %>
     <%= f.collection_select :BusLine_id, BusLine.order(:linename), :id, :linename, include_blank: true %>
  </div>

<%= f.input :cpk %>
<%= f.input :avatar, as: :file %>

  <div class="actions">
    <%= f.submit %>
  </div>
