  <strong>Job Card Number:</strong>
  <%= @repair.jobcard_num %>
</p>

<h3>Repairs</h3>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Status</th>
      <th>Repair</th>
      <th>Time Started</th>
      <th>Time Finished</th>
      <th>Duration</th>
      <th>Mechanic</th>
      <th>Part</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @repair.jobs.each do |job| %>
      <tr>
        <td><%= job.status %></td>
        <td><%= job.jobparticular %></td>
        <td><%= job.timestarted %></td>
        <td><%= job.timefinished %></td>
        <td><%= job.duration %></td>
        <td><%= job.mechanic.lastname %></td> 
          <% job.job_parts.each do |jobpart| %>
          <td><%= jobpart.part.partname %></td>
          <td><%= jobpart.quantity %><%= jobpart.part.unit %></td>
          <td><%= jobpart.cost %></td>
          <td><%= jobpart.total %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<%= link_to 'Edit', edit_repair_path(@repair), :class => "btn btn-default", label: "Wiew"%>
