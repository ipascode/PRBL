<div class='nested-fields'>
  <div class="well" style="padding: 10px;">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= f.input :jobparticular, label: "Job Particulars" %>
    </div>

     <section id="result"></section> 
     
    <div class="col-xs-12 col-md-6">
      <%= f.association :mechanic, label_method: :lastname, value_method: :id, include_blank: false, label: "Mechanic", input_html: {class: 'mechanic-selectize'} %>
    </div>
  </div>

    <div id='job-parts'>
    <%= f.fields_for :job_parts do |job_parts| %>
      <%= render 'repairs/job_parts_fields', :f => job_parts %>
    <% end %>
    
    <div class='links' style="padding-bottom:10px;">
      <%= link_to_add_association 'Add Part', f, :job_parts, :partial => 'job_parts_fields', :render_options => {:bootstrap => 'inline'}, :class => "btn btn-success" %>
    </div>

  </div>

    <%= link_to_remove_association "Remove Task", f, :class => "btn btn-danger" %>

  </div>
</div>
  
