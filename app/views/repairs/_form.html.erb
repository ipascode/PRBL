<%= simple_form_for(@repair) do |f| %>
 <%= f.error_notification id: 'user_error_message', class: 'form_error'%>
 <% repair.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      <br>

    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= f.association :Bus, label_method: :bus_no, value_method: :id, include_blank: false %>
      </div>
      
      <div class="col-xs-12 col-md-6">
        <%= f.input :jobcard_num %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-md-6">
        <%= f.input :datestarted %>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= f.input :datefinished %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= f.association :Driver, label_method: :lastname, value_method: :id, include_blank: false %>
      </div>
      <div class="col-xs-12 col-md-6">
        <%= f.input :location %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-12">
        <%= f.input :repairtype %>
      </div>
    </div>

<h3>Repairs</h3>


<div id='jobs'>
    <%= f.fields_for :jobs do |job| %>
      <%= render 'repairs/jobs_fields', :f => job %>
    <% end %>

<div class='links' style="padding-bottom:10px;">
   <%= link_to_add_association 'Add Repair', f, :jobs, :partial => 'jobs_fields', :render_options => {:bootstrap => 'inline'}, :class => "btn btn-success" %>
</div>

</div>

  <div class="actions">
    <%= f.submit :Submit, class: "btn btn-primary" %>
  </div>
<% end %>

