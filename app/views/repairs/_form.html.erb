<%= simple_form_for(repair) do |f| %>
  <% if repair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(repair.errors.count, "error") %> prohibited this repair from being saved:</h2>

      <ul>
      <% repair.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :datestarted %>
    <%= f.datetime_select :datestarted %>
  </div>

  <div class="field">
    <%= f.label :datefinished %>
    <%= f.datetime_select :datefinished %>
  </div>

  <div class="field">
    <%= f.label :Driver_id %>
    <%= f.collection_select :Driver_id, Driver.order(:lastname), :lastname, :firstname, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :Bus_id %>
    <%= f.collection_select :Bus_id, Bus.order(:plate_no), :plate_no, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :repairtype %>
    <%= f.text_field :repairtype %>
  </div>

<h3>Repairs</h3>

  <div class="field">
    <%= f.fields_for :jobs do |job| %>
    <%= render 'jobs_fields', f: task %>
    <%= link_to_add_association 'Add Repair', f, :jobs %>
    <% end %>

  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
