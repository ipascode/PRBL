
<div class='nested-fields'>
    <div class="field">
     <%= f.label :jobparticular %>
     <%= f.text_field :jobparticular %>
    </div>

    <div class="field">
    <%= f.label :timestarted %>
     <%= f.datetime_select :timestarted %>
    </div>

    <div class="field">
     <%= f.label :timefinished %>
     <%= f.datetime_select :timefinished %>
    </div>

    <div id='job-parts'>
    <%= f.fields_for :job_parts do |job_parts| %>
      <%= render 'repairs/job_parts_fields', :f => job_parts %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add Part', f, :job_parts, :partial => 'job_parts_fields', :render_options => {:bootstrap => 'inline'} %>
    </div>

  </div>

    <div class="field">
      <%= f.input :done, :as => :boolean %>
    </div>

    <%= link_to_remove_association "Remove Task", f %>
  </div>
  
