<div class="row">
  <div class="col-md-6 col-xs-3">
    <h1>Bus Models</h1>
  </div>

  <div class="col-md-6 col-xs-9">
    <div class="btn-group pull-right" role="group" aria-label="..." style="padding-top:18px;">
      <%= link_to '+ Bus Model', new_bus_model_path, :class => "btn btn-default" %>
      <%= link_to 'Back', buses_path, :class => "btn btn-default" %>
      <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapseCSV" aria-expanded="false" aria-controls="collapseExample">
        Import
      </button>
       <%= link_to "Export", bus_models_path(format: "csv"), :class => "btn btn-default" %> 
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-3 pull-right">
  <div class="collapse" id="collapseCSV">
    <div class="well">
      <%= form_tag import_bus_models_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import CSV", :class => "btn btn-default" %>
      <% end %>
    </div>
  </div>
  </div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @bus_models.each do |bus_model| %>
      <tr>
        <td><%= bus_model.brand %></td>
        <td><%= link_to 'Info', bus_model, :class => "btn btn-default btn-raised" %></td>
        <td><%= link_to 'Edit', edit_bus_model_path(bus_model), :class => "btn btn-default btn-raised" %></td>
        <td><%= link_to 'Delete', bus_model, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-raised" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


