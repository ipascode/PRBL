<p id="notice"><%= notice %></p>

<h1>Bus Models</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @bus_models.each do |bus_model| %>
      <tr>
        <td><%= bus_model.brand %></td>
        <td><%= link_to 'View', bus_model, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_bus_model_path(bus_model), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Delete', bus_model, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Bus Model', new_bus_model_path, :class => "btn btn-primary" %>
<%= link_to 'Back', buses_path, :class => "btn btn-primary" %>
