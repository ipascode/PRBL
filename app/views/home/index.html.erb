          <tr>
            <td><%= bus.bus_no %></td>
          </tr>
        </tr>
        <tr>
            <td colspan="6"> <!-- repairs is an array so kailangan i loop para isa-isahain-->
                <div id="accordion" class="collapse"><%= repair.repairtype %></div>
            </td>
        </tr>
      <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

