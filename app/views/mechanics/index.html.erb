<p id="notice"><%= notice %></p>

<%= link_to 'Drivers', drivers_path %><br>

<h1>Mechanics</h1>
<%= link_to 'New Mechanic', new_mechanic_path %><br>

<h3>Import a CSV File</h3>
  <%= form_tag import_mechanics_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Middlename</th>
      <th>Type</th>
      <th>Skills</th>
      <th>Shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mechanics.each do |mechanic| %>
      <tr>
        <td><%= image_tag mechanic.avatar.url(:thumb) %></td>
        <td><%= mechanic.lastname %></td>
        <td><%= mechanic.firstname %></td>
        <td><%= mechanic.middlename %></td>
        <td><%= mechanic.position %></td>
        <td><%= mechanic.skills %></td>
        <td><%= mechanic.shift %></td>
        <td><%= link_to 'Show', mechanic %></td>
        <td><%= link_to 'Edit', edit_mechanic_path(mechanic) %></td>
        <td><%= link_to 'Destroy', mechanic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


