<h2>Manage Users</h2>

<div class="row">
	<div class="btn-group pull-right" role="group" aria-label="..." style="padding-top:18px;">
	  <%= link_to '+ User', new_user_registration_path, :class => "btn btn-default" %>
	</div>
</div>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Position</th>
      <th>Type</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody class="table-hover">
    <% @users.each do |user| %>
      <tr>

        <td><%= user.firstname %><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.position %></td>
        <td><%= user.role %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>